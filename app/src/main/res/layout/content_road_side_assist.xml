<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/eight"


                android:elevation="@dimen/eight"
                app:cardCornerRadius="@dimen/eight">

                <LinearLayout
                    android:layout_marginTop="@dimen/eight"
                    android:layout_marginBottom="@dimen/fab_margin"
                    android:layout_marginRight="@dimen/eight"
                    android:layout_marginLeft="@dimen/eight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/four">

                        <TextView
                            android:layout_width="@dimen/four"
                            android:layout_height="@dimen/four"
                            android:background="@drawable/circularbg_yellow" />

                        <TextView
                            style="@style/TextViewStyle.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/four"
                            android:text="Vehicle Towing" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/four">

                        <TextView
                            android:layout_width="@dimen/four"
                            android:layout_height="@dimen/four"
                            android:background="@drawable/circularbg_yellow" />

                        <TextView
                            style="@style/TextViewStyle.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/four"
                            android:text="Onside Wheel Repair / Fuel Assistance" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/four">

                        <TextView
                            android:layout_width="@dimen/four"
                            android:layout_height="@dimen/four"
                            android:background="@drawable/circularbg_yellow" />

                        <TextView
                            style="@style/TextViewStyle.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/four"
                            android:text="Key Assistance / Battery Services" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/four">

                        <TextView
                            android:layout_width="@dimen/four"
                            android:layout_height="@dimen/four"
                            android:background="@drawable/circularbg_yellow" />

                        <TextView
                            style="@style/TextViewStyle.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/four"
                            android:text="Hotel Accommodation Services" />

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/four"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilName"
                            style="@style/TextInputMaterialStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Name"
                            app:endIconMode="none"
                            android:background="@color/bg_edit"
                            app:startIconDrawable="@drawable/ic_name">

                            <EditText
                                android:id="@+id/etFullName"
                                style="@style/Style.edittext"
                                android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                               android:enabled="false"
                                android:inputType="text"
                                android:maxLength="100"

                                android:text="" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyVehicle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"

                        android:layout_marginTop="@dimen/four">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilVehicle"
                            style="@style/TextInputMaterialStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Vehicle Number"
                            app:endIconMode="none"
                            android:background="@color/bg_edit"
                            app:startIconDrawable="@drawable/ic_vehicle">

                            <EditText
                                android:id="@+id/etVehicle"
                                style="@style/Style.edittext"
                                android:enabled="false"
                                android:inputType="textCapCharacters"

                                android:maxLines="1"
                                android:text="" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/four"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/TextInputMaterialStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:hint="Make"
                            app:endIconMode="none"
                            android:background="@color/bg_edit"
                            app:startIconDrawable="@drawable/ic_policy">

                            <EditText
                                android:id="@+id/acMake"

                                style="@style/Style.edittext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:inputType="text"
                                android:lines="1"
                                android:maxLines="1" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/four"
                        android:orientation="horizontal">


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/TextInputMaterialStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:hint="Model"
                            app:endIconMode="none"
                            android:background="@color/bg_edit"
                            app:startIconDrawable="@drawable/ic_policy">

                            <EditText
                                android:id="@+id/acModel"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:enabled="false"
                                android:inputType="text"
                                android:lines="1"
                                android:maxLines="1" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/four">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilYearManufacture"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Year Of Manufacture">

                            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                android:id="@+id/acYearManufacture"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:focusable="false"
                                tools:ignore="KeyboardInaccessibleWidget" />
                        </com.google.android.material.textfield.TextInputLayout>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextInputMaterialStyle"
                            app:endIconMode="none"
                            app:helperText="@string/ExpDate"
                            app:startIconDrawable="@drawable/ic_calendar_24"
                            android:hint="Expiry Date">

                            <EditText
                                android:id="@+id/etDate"
                                style="@style/Style.edittext"
                                android:layout_width="match_parent"
                                android:focusable="false"
                                android:drawableRight="@drawable/vector_date"
                                />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>




                </LinearLayout>




            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="@dimen/eight"
                android:background="@drawable/bg_primary_rect"
                android:text="DOWNLOAD POLICY" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>