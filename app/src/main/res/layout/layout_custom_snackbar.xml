<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/toast_layout_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:background="@android:color/transparent"
    android:padding="0dp">


   <com.google.android.material.card.MaterialCardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardBackgroundColor="@color/primary_light_color"
       app:cardCornerRadius="5dp"
       app:cardElevation="1dp"
       app:cardPreventCornerOverlap="true"
       app:cardUseCompatPadding="true"
       android:layout_margin="0dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:orientation="horizontal"

             android:paddingTop="10dp"
             android:paddingLeft="10dp"
             android:paddingRight="10dp"
             android:paddingBottom="10dp"
             android:gravity="center_vertical">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="34dp"

                android:scaleType="fitXY"
                android:src="@drawable/elite_plus"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
               <TextView
                   android:id="@+id/txtMessage"
                   style="@style/TextViewStyle.MediumRegular"
                   android:layout_marginLeft="@dimen/four"
                   android:layout_marginRight="@dimen/eight"
                   android:text=""
                   android:textColor="@color/primary_color"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content" />

               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/white">

               </View>
               <TextView
                   android:id="@+id/txtAction"
                   android:layout_marginLeft="@dimen/eight"
                   android:layout_marginRight="@dimen/eight"
                   android:padding="@dimen/four"
                   style="@style/TextViewStyle.Medium"
                   android:fontFamily="@font/muli"
                   android:layout_gravity="center_vertical"
                   android:text="OK"
                   android:textColor="@color/orange_button"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

            </LinearLayout>



         </LinearLayout>





   </com.google.android.material.card.MaterialCardView>








</LinearLayout>
