<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.dashboard.DashboardFragment">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/lyheader"
                android:background="@color/gray_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:elevation="@dimen/four"
                android:orientation="horizontal">

                <TextView
                   android:layout_alignParentLeft="true"
                  android:layout_centerVertical="true"
                    android:id="@+id/txtVehicle"
                    android:layout_marginLeft="@dimen/fab_margin"
                    style="@style/CustomTitle.Small"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/eight"
                    android:layout_marginRight="@dimen/fab_margin"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:backgroundTint="@color/primary_dark_color"
                    android:src="@drawable/car">

                </ImageView>

            </RelativeLayout>



        <LinearLayout
          android:layout_below="@+id/lyheader"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:padding="@dimen/fab_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomTitle.Title"
                android:textStyle="bold"
                android:text="@string/dashboard_desc">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/fab_margin"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvSecure"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:cardCornerRadius="@dimen/eight"
                    app:cardElevation="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingLeft="@dimen/fab_margin"
                        android:paddingRight="@dimen/fab_margin"
                        android:paddingTop="@dimen/eight"
                        android:paddingBottom="@dimen/eight"
                        android:weightSum="1"
                        android:background="@drawable/bg_rect_yellow">

                        <LinearLayout
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:layout_height="wrap_content">
                            <ImageView

                                android:layout_marginRight="@dimen/eight"
                                android:layout_width="wrap_content"
                                android:layout_height="65dp"
                                android:src="@drawable/secure_plus"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginLeft="@dimen/eight"
                                android:text="SECURE+"
                                style="@style/CustomTitle.dashboard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvAssure"
                    android:layout_marginTop="@dimen/twenty_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/eight"
                    app:cardElevation="4dp">
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingLeft="@dimen/fab_margin"
                        android:paddingRight="@dimen/fab_margin"
                        android:paddingTop="@dimen/eight"
                        android:paddingBottom="@dimen/eight"
                        android:weightSum="1"
                        android:background="@drawable/bg_rect_green">

                        <LinearLayout
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:layout_height="wrap_content">
                            <ImageView

                                android:layout_marginRight="@dimen/eight"
                                android:layout_width="wrap_content"
                                android:layout_height="65dp"
                                android:src="@drawable/assure"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginLeft="@dimen/eight"
                                android:text="ASSURE+"
                                style="@style/CustomTitle.dashboard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvRto"
                    android:layout_marginTop="@dimen/twenty_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/eight"
                    app:cardElevation="4dp">
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingLeft="@dimen/fab_margin"
                        android:paddingRight="@dimen/fab_margin"
                        android:paddingTop="@dimen/eight"
                        android:paddingBottom="@dimen/eight"
                        android:weightSum="1"
                        android:background="@drawable/bg_rect_red">

                        <LinearLayout
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:layout_height="wrap_content">
                            <ImageView

                                android:layout_marginRight="@dimen/eight"
                                android:layout_width="wrap_content"
                                android:layout_height="65dp"
                                android:src="@drawable/rto"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginLeft="@dimen/eight"
                                android:text="RTO+"
                                style="@style/CustomTitle.dashboard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        </LinearLayout>

                    </LinearLayout>



                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</ScrollView>